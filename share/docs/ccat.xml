<title>{{ TOOL_NAME }}</title>

<section title="USAGE">
        <line command="{{ TOOL_NAME }}">&lt;file&gt; &lt;commands&gt;</line>
</section>

<section title="commands">
        <line command="-l">to show the code lines</line>
        <line command="-w">to warp the words</line>
        <line command="-bc">to change the background color</line>
</section>

<section title="examples">
        <line command="{{ TOOL_NAME }}">file.py -bc "#ff0000"</line>
        <line command="{{ TOOL_NAME }}">file.py -l</line>
        <line command="{{ TOOL_NAME }}">file.py -w</line>
        <line command="{{ TOOL_NAME }}">file.py -bc red -l -w</line>
</section>
